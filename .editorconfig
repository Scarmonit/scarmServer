# EditorConfig - Coding Style Configuration
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# JavaScript/TypeScript files
[*.{js,mjs,cjs,ts,mts,cts}]
indent_style = space
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Package manager files
[package.json]
indent_style = space
indent_size = 2

# Configuration files
[*.config.{js,ts,mjs,cjs}]
indent_style = space
indent_size = 2

